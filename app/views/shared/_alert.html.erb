<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-6 col-lg-6">

      <% if notice %>
        <div class="flash flash-success alert alert-dismissible fade show mt-3" role="alert">
          <span class="notice m-0"> <%= notice %> </span>
          <a data-bs-dismiss="alert" aria-label="Close">
            <i class="fas fa-times"></i>
          </a>
        </div>
      <% end %>

      <% if alert %>
        <div class="flash flash-danger alert alert-dismissible fade show mt-3" role="alert">
          <span> <%= alert %> </span>
          <a data-bs-dismiss="alert" aria-label="Close">
            <i class="fas fa-times"></i>
          </a>
        </div>
      <% end %>

    </div>
  </div>
</div>
