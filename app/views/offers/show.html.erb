<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-8 card">

      <% if @offer.photos %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
              <% @offer.photos.each do |photo| %>
                <div class="carousel-item active">
                  <%= cl_image_tag photo.key, style: 'height:100%; width:auto;', crop: :fill %>
                </div>
              <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>

      <h1 class="border-bottom"><%= @offer.user.first_name %><%= @offer.user.last_name %></h1>
      <p> üìç <%= @offer.localisation %></p>
      <p> üí∞ <%= @offer.price %> golds / day</p>
      <p><%= @offer.summary %></p>
      <% if  @user == @offer.user %>
        <%= link_to "Edit this offer", edit_offer_path(@offer), class: "btn btn-primary" %>
        <%= link_to "Delete this offer", offer_path(@offer),  data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"},
        class: "btn btn-danger" %>
      <% else %>
        <%= link_to "Reserve", new_offer_reservation_path(@offer), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
