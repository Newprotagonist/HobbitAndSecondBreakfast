<% if @reservations.empty? %>
  <div class="container">
    <div class="row mx-auto">
      <p class="no-reservation">No Reservations Yet</p>
      <%= image_tag ('no-picture.gif') %>
    </div>
  </div>
<% else %>
  <div class="row mx-auto reservation-index">
    <h1>Your Reservations</h1>
    <h2><em>Total Price: <%= @reservations.sum(:total_price) %></em></h2>
  </div>
  <div class="row">
    <% @reservations.each do |reservation| %>
    <div class="col-sm-12 col-md-6 col-lg-3">
      <div class="card mx-auto my-2" style="width: 300px; overflow: hidden;">
        <%= render partial: "reservation", locals: { reservation: reservation } %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
